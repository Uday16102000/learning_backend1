<html>
    <head>
        <title>
            <%= title %>
        </title>
        <script src="https://kit.fontawesome.com/4a7603763d.js" crossorigin="anonymous"></script>
<link rel="stylesheet" type="text/css" href="/css/home.css">
    </head>
    <body>
        <h1 id="page-heading"> <i class="fa fa-address-book"></i> My Contact List

        </h1>
        <div id="contacts-list-container">
            <ul>
                <% for(let i of contact_list){ %>
                <li>
                    <div class="details">
                    <p><%= i.name %></p>
                    <p><%= i.phone %></p>
                    </div>
                    <div class="delete-button">
                     <a href="/delete-contact/?phone=<%= i.phone %>&
                         name=<%= i.name  %>">
                       	
                       <i class="fa fa-window-close-o" class="cross-button"></i>
                       </a>
                    </div>
                </li>

            <% } %>
            </ul>
        </div>
        <form id="new-contact-form" action="createcontact" method="POST">
        <input type="text" name="name" placeholder="Enter Your Name">
        <input type="number" name="phone" placeholder="Enter your Number">
        <button type="submit">ADD CONTACTS

        </button>
</form>
<script type="text/javascript" src="/js/home.js"></script>

    </body>
</html>